<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#E1EDF8"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivMatchTeam1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/indiaflag" />

                <TextView
                    android:id="@+id/tvMatchCountryTeam1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="2"
                    android:text="India"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMatchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="2"
                    android:text="India tour of africa, 2021-22"
                    android:textAlignment="center"
                    android:textColor="#2e2e2e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMatchTiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="2"
                    android:text="07.22 pm, 1st T20 match"
                    android:textAlignment="center"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMatchLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="2"
                    android:text="Cape Town, Africa"
                    android:textAlignment="center"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivMatchTeam2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aus" />

                <TextView
                    android:id="@+id/tvMatchCountryTeam2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/plusjakarta_text_regular"
                    android:maxLines="2"
                    android:text="Africa"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rv3"
            android:layout_marginTop="15dp"
            android:background="#292929" />

        <TextView
            android:id="@+id/tvMatchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devider1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/plusjakarta_text_regular"
            android:maxLines="2"
            android:text="Bangladesh won by 111 runs"
            android:textAlignment="center"
            android:textColor="#E13131"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>